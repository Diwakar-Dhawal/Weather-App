<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/spalsh_img"
        android:layout_width="211dp"
        android:layout_height="140dp"
        android:layout_marginTop="256dp"
        android:src="@drawable/white_cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Matters.\n"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/spalsh_img"
        app:layout_constraintStart_toStartOf="@id/spalsh_img"
        app:layout_constraintEnd_toEndOf="@id/spalsh_img"
        android:layout_marginTop="67dp"
        android:textAlignment="center"
        android:fontFamily="@font/merriweathersans_bold"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made with ❤️.\n"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/merriweathersans_medium"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>